<h1>Edit Sponsoredpost</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guildlines for Sponsoredpost</p>
    <ul>
      <li>No scams</li>
      <li>No illegal sales</li>
      <li>The incessant use of hashtags will get you banned.</li>
    </ul>
  </div>

  <div class="col-md-8">
    <%= form_for [@sponsoredpost.topic, @sponsoredpost] do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
      </div>
      <div class="form-group">
        <%= f.label :price %>
        <%= f.number_field :price, class: 'form-control', placeholder: "Enter price" %>
      </div>
      <div class="col-md-8">
        <%= f.label :body%>
        <%= f.text_area :body, class: 'form-control', placeholder: "Enter post body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <%end%>
  </div>
</div>
